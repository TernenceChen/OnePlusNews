<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <fragment
                    android:id="@+id/frag_first"
                    android:name="com.example.oneplus.opnew.fragment.HomePagerFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <fragment
                    android:id="@+id/frag_second"
                    android:name="com.example.oneplus.opnew.fragment.HistoryRecordFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <fragment
                    android:id="@+id/frag_third"
                    android:name="com.example.oneplus.opnew.fragment.AddFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorBottomBackground"
                android:showDividers="none">

            </TabWidget>
        </LinearLayout>
    </TabHost>

</LinearLayout>