<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/offset_10dp"
    android:layout_margin="@dimen/offset_10dp"
    android:gravity="center">
    <TextView
        android:id="@+id/view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_toLeftOf="@id/news_image"
        android:layout_marginBottom="@dimen/offset_15dp"
        android:textColor="#000"
        android:textSize="@dimen/font_size_normal_high"
        />
    <TextView
        android:id="@+id/author_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_text"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_marginRight="@dimen/offset_70dp"
        android:textColor="#000"
        android:textSize="@dimen/font_size_small"/>
    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_text"
        android:layout_toRightOf="@id/author_name_view"
        android:textColor="#000"
        android:textSize="@dimen/font_size_small"/>
    <ImageView
        android:id="@+id/news_image"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
