<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view_text_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="16dp"
                tools:text="item"/>
            <TextView
                android:id="@+id/author_name_view_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_text_three"
                android:layout_marginLeft="10dp"
                android:text="author_name"
                android:textColor="#000"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/date_view_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_text_three"
                android:layout_toRightOf="@id/author_name_view_three"
                android:layout_marginLeft="70dp"
                android:text="date"
                android:textColor="#000"
                android:textSize="12dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/author_name_view_three">
                <ImageView
                    android:id="@+id/news_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:paddingRight="10dp"
                    android:layout_toLeftOf="@id/news_image2"/>
                <ImageView
                    android:id="@+id/news_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/news_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@id/news_image2"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>