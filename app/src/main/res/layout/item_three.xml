<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="@dimen/offset_10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/view_text_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:textColor="#000"
        android:textSize="@dimen/font_size_normal_high"/>
    <TextView
        android:id="@+id/author_name_view_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_text_three"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:textColor="#000"
        android:textSize="@dimen/font_size_small"/>
    <TextView
        android:id="@+id/date_view_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_text_three"
        android:layout_toRightOf="@id/author_name_view_three"
        android:layout_marginLeft="@dimen/offset_70dp"
        android:textColor="#000"
        android:textSize="@dimen/font_size_small"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/offset_10dp"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_below="@id/author_name_view_three">
        <ImageView
            android:id="@+id/news_image1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/offset_90dp"
            android:scaleType="fitXY"
            android:paddingRight="@dimen/offset_10dp"
            android:layout_toLeftOf="@id/news_image2"/>
        <ImageView
            android:id="@+id/news_image2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/offset_90dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/news_image3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/offset_90dp"
            android:paddingLeft="@dimen/offset_10dp"
            android:layout_toRightOf="@id/news_image2"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</RelativeLayout>